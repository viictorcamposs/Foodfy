{% macro recipes(filter, recipes) %}

    <section class="filterResults">
        <h1>Buscando por "{{ filter }}"</h1>
        <div class="cards">
            {% for recipe in recipes %}
                <a href="/recipes/{{recipe.id}}">
                    <div class="card">
                        <div class="card-image">
                            <img src="{{ recipe.img }}" alt="Receita {{ recipe.title }}">
                        </div>
                        <div class="card-title">
                            <h2>{{ recipe.title }}</h2>
                        </div>
                        <div class="card-info">
                            <p>por {{ recipe.chef.name }}</p>                    
                        </div>
                    </div>
                </a>
            {% endfor %}
        </div>
    </section>

{% endmacro %}