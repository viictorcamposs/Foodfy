{% extends './layout.njk' %}

{% block content %}

    <section>
        <form action="/admin/users/forgot-password" method="post">
            <div class="forgot-password">
                {% include '../parts/messages.njk' %}
                <header>
                    <h1>Esqueceu a senha?</h1>
                </header>

                <div class="item">
                    <div>Email</div>
                    <div class="input">
                        <input 
                        type="email" 
                        name="email" 
                        value="{{ user.email }}"
                        onblur="Validate.apply(this, 'isEmail')">
                    </div> 
                </div>

                <footer class="forgot-password">
                    <button type="submit">Recuperar</button>
                </footer>
            </div>
        </form>
    </section>

{% endblock%}