{% extends './layout.njk' %}

{% block content %}

    <section>
        <form action="/admin/users/reset-password" method="post">
            <div class="forgot-password">
                {% include '../parts/messages.njk' %}
                <header>
                    <h1>Nova senha</h1>
                </header>

                {% include './reset-fields.njk' %}
                <input type="hidden" name="token" value="{{token}}">

                <footer class="forgot-password">
                    <button type="submit">Nova Senha</button>
                </footer>
            </div>
        </form>
    </section>

{% endblock%}