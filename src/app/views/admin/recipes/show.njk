{% extends '../layout.njk' %}
{% block head %}
    <link rel="stylesheet" href="/styles/admin/show.css">
{% endblock %}

{% block content %}
    <div id="main-content">
        <div class="header">
            <h1>Receita: {{recipe.title}}</h1>
            <a href="/admin/recipes/{{ recipe.id }}/edit">Editar receita</a>
        </div>
        <section>

            <div class="avatar recipeTitle">
                <div class="gallery">
                    <div class="highlight">
                        <img src="{{recipe.img}}" alt="Imagem de {{recipe.title}}">
                    </div>
                    <div class="gallery-preview">
                        {% for image in recipe.files %}
                            <img src="{{image.src}}" alt="Imagem de {{image.name}}"
                                {% if loop.index0 == 0 %}
                                    class="active"
                                {% endif %}
                                onclick="ImageGallery.setImage(event)"
                            >
                        {% endfor %}
                    </div>
                </div>
                <h1>{{recipe.title}}</h1>
                <p>por {{recipe.chef.name}} </p>
            </div>
            <div class="detail">
                <h1>Ingredientes</h1>
                <div class="content">
                    {% for ingredient in recipe.ingredients %}
                        <p> - {{ingredient}}</p>
                    {% endfor %}
                </div>
            </div>
            <div class="detail">
                <h1>Modo de preparo</h1>
                <div class="content">
                    {% for preparation in recipe.preparations %}
                        <p> - {{preparation}}</p>
                    {% endfor %}
                </div>
            </div>
            <div class="detail">
                <h1>Informações adicionais</h1>
                <div class="content">
                    <p>{{recipe.information}}</p>
                </div>
            </div>
        </section>
    </div>

{% endblock %}