{% extends 'layout.njk' %}
{% block head %}
  <link rel="stylesheet" href="/recipes.css">  
  <title>Foodfy - Receitas</title>
{% endblock %}
{% block content %}
  <main class="content">
    <section>
      <div class="cards">
        {% for card in data %}
          <div class="card">
            <div class="card-img">
              <img src="{{ card.image }}" alt="Image do prato {{ card.title }}">
            </div>
            <div class="card-content">
              <p>{{ card.title }}</p>
            </div>
            <div class="card-info">
              <p>{{ card.author }}</p>
            </div>
          </div>
        {% endfor %}
      </div>
    </section>
  </main>
{% endblock %}
{% block script %}   
  <script src="/foodfy.js"></script>
{% endblock %}